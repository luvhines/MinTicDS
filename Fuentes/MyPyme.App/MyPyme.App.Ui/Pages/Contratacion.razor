<EditForm Model="empleado">

    <table class="table">
        <tr>
            <td><label for="Cedula">Cedula</label></td>
            <td><input type="text" @bind="empleado.Cedula"></td>
        </tr>
        <tr>
            <td><label for="Nombre Empleado">Nombre</label></td>
            <td><input type="text" placeholder="Digite Nombre " @bind="empleado.Nombre"></td>
            <td><label for="Cedula Empleado">Apellido</label></td>
            <td><input type="text" placeholder="Digite Apellidos" @bind="empleado.Apellido"></td>
        </tr>

        <tr>
            <td><label for="Direccion Empleado">Direccion</label></td>
            <td><input type="text" placeholder="Digite Direccion de Apartamento o casa " @bind="empleado.Direccion"></td>
            <td><label for="Celular Empleado">Celular</label></td>
            <td><input type="text" @bind="empleado.Celular"></td>
        </tr>
        <tr>
            
            <td><label for="Correo Empleado">Correo</label></td>
            
            <td><input type="text" @bind="empleado.Correo"></td>
            <td><label for="Genero Empleado">Genero</label></td>
            <td><input type="text" @bind="empleado.Genero"></td>
            
        </tr>

        <tr>
            <td><label for="Eps Empleado">Eps</label></td>
            <td><input type="text" @bind="empleado.Eps"></td>
            <td><label for="Arl Empleado">Arl</label></td>
            <td><input type="text"  @bind="empleado.Arl"></td>
        </tr>
         <tr>
            <td><label for="Salario Empleado">Salario</label></td>
            <td><input type="text"  @bind="empleado.Salario"></td>
            
        </tr>

        <tr colspan="2" style="text-align: center">
            <td><input type="submit" value="Guardar" @onclick="Guardar"></td>
            <td><input type="button" value="Cancelar" @onclick="Cancelar"></td>
        </tr>

    </table>

</EditForm>


