<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true"
    role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="color: red;">@Titulo</h4>
                <button type="button" class="close" @onclick="ModalCancelar" >&times;</button>
            </div>
            <div class="modal-body">
                <p>@Texto</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="ModalCancelar" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" @onclick="ModalAceptar" >Lo entiendo</button>
            </div>
        </div>
    </div>
</div>

}

@code{

    [Parameter]
    public string Titulo { get; set; }
    
    [Parameter]
    public string Texto { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }
    
    private Task ModalCancelar()
    {
        return OnClose.InvokeAsync(false);
    }

    private Task ModalAceptar()
    {
        return OnClose.InvokeAsync(true);
    }
    
}
